<div class="container">
    <form id="form" method ="post" action="/thanks">
        <div class="form-group">
            <label for="email">First Name:</label>
            <input type="text" class="form-control" id="first" placeholder="Enter First name" name="firstname">
        </div>
        <div class="form-group">
            <label for="pwd">Family Name:</label>
            <input type="text" class="form-control" id="family" placeholder="Enter Last Name" name="lastname">
        </div>
        <div class="form-group">
            <label> Sign Here</label>
        </div>
        <div class="form-group">
            <canvas id="canvas" width="900" height="80"></canvas>
            <input type="hidden" id="signature" name="signature">
        </div>
        <button type="submit" class="btn btn-default">Submit</button>
    </form>
</div>
